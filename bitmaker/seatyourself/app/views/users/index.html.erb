<h1>List of Users:</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %>    <%= user.name %></td>
      <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'New user', new_user_path %>
